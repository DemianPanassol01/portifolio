        <main>
            <a target="_blank" href="https://api.whatsapp.com/send?phone=5554991967411"><img src="/img/svg/whatsapp.svg" class="whatsapp-btn" alt="Logo whatsapp"></a>
            <a class="btn-up" href="#"><i class="fas fa-arrow-up"></i></a>
            <%- include('../../layout/flash') %>
                <div>
                    <h2>Entre em Contato</h2>
                    <span class="linha"></span>
                    <p>Envie uma mensagem para mim por aqui</p>
                </div>

                <form action="/contato" method="POST">
                    <input type="text" name="name" placeholder="Nome" id="name" autocomplete="name">
                    <input type="email" name="email" placeholder="Email" id="email" autocomplete="email">
                    <input type="tel" name="phone" placeholder="Telefone" id="phone" autocomplete="tel">
                    <textarea name="message" id="message" placeholder="Mensagem"></textarea>
                    <small id="alert-info">Informações de contato não pode ser deixadas em branco.</small>
                    <small id="alert-msg">Insira sua mensagem.</small>
                    <button class="btn btn-send" type="submit">Enviar Mensagem</button>
                </form>

                <section>
                    <div>
                        <i class="fas fa-3x fa-phone"></i>
                        <h4>Telefone</h4>
                        <a href="tel:+5554991967411">
                            <h5>+55 54 991967411</h5>
                        </a>
                    </div>
                    <div>
                        <i class="fas fa-3x fa-envelope"></i>
                        <h4>Email</h4>
                        <a href="mailto:demianpanassol01@gmail.com">
